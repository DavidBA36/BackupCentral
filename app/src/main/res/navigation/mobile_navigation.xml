<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.david.backupcentral.ui.trabajos.TrabajosFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_trabajos" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.david.backupcentral.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.david.backupcentral.ui.notifications.UserFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.david.backupcentral.ui.notifications.UserFragment"
        android:label="Historial"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.david.backupcentral.ui.notifications.UserFragment"
        android:label="Usuario"
        tools:layout="@layout/fragment_notifications" />
</navigation>